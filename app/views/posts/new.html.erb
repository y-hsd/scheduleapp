<h3>スケジュール新規作成</h3>
 
    <%= form_with model: @post do |f| %>
      <table>
        <tr>
          <th><%= f.label :title,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_date,"開始日" %></th>
          <td><%= f.text_field :start_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_date,"終了日" %></th>
          <td><%= f.text_field :end_date %></td>
        </tr>
        
        <tr>
          <th><%= f.label :allday, "終日" %></th>
          <td><%= f.check_box :allday, :as => :boolean %>終日の場合はチェックを入れます</td>
        </tr>
 
        <tr>
          <th><%= f.label :contents,"スケジュール詳細" %></th>
          <td><%= f.text_area :contents %></td>
        </tr>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "登録完了する"%></li>
          <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
        </ul>
      </div>
    <% end %>